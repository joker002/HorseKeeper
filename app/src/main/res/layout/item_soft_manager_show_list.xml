<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <LinearLayout
        android:gravity="center" 
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >
        <CheckBox
            android:id="@+id/ch_soft_manager_show_item_choose"
            android:focusable="false" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <ImageView
            android:id="@+id/iv_soft_manager_show_item_icon"
            android:src="@drawable/ic_launcher" 
            android:layout_width="40dp"
            android:layout_height="40dp"
            />
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp" 
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                 android:id="@+id/tv_soft_manager_show_item_name"
                android:text="NAME" 
               android:layout_width="match_parent" 
               android:layout_height="match_parent"
                />
            <TextView
                 android:id="@+id/tv_soft_manager_show_item_package_name"
                android:layout_marginTop="5dp" 
               android:text="PAGERNAME" 
               android:layout_width="match_parent" 
               android:layout_height="match_parent"
                />
        </LinearLayout>
        <TextView
             android:id="@+id/tv_soft_manager_show_item_versionname"
            android:layout_marginTop="10dp"
            android:text="1.0" 
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            />
    </LinearLayout>

</LinearLayout>
