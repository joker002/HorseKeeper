<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <!--顶层全部  -->
    <LinearLayout
        android:layout_weight="1" 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:background="@color/blue"
        >
        <TextView
            android:textColor="@color/write"
            android:text="已发现" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        
        <TextView
            android:id="@+id/ll_file_all_home"
            android:textColor="@color/write"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="4.32G"
            android:textSize="40sp"
            android:textStyle="bold|italic" />
    </LinearLayout>
   
    <!--全部  -->
    <LinearLayout
        android:id="@+id/ll_file_manager_all"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >
        <TextView
            android:text="全部"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
             android:id="@+id/ll_file_all"
            android:layout_marginLeft="10dp" 
            android:text="4.32G"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_weight="1" 
            android:layout_width="0dp"
            android:layout_height="match_parent"
            />
        <ImageView
            android:id="@+id/iv_file_all" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrows_right"
            android:visibility="gone"
            />
        <ProgressBar
            android:id="@+id/pb_file_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            />
    </LinearLayout>
    
    <!--文档  -->
    <LinearLayout
       android:id="@+id/ll_file_manager_txt"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >
        <TextView 
            android:text="文档"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/ll_file_txt"
            android:layout_marginLeft="10dp" 
            android:text="12.18M"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_weight="1" 
            android:layout_width="0dp"
            android:layout_height="match_parent"
            />
        <ImageView
            android:id="@+id/iv_file_txt" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:src="@drawable/ic_arrows_right" 
            />
        <ProgressBar
            android:id="@+id/pb_file_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            />
    </LinearLayout>
   
    <!--视频  -->
    <LinearLayout
         android:id="@+id/ll_file_manager_vedio"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >
        <TextView 
            android:text="视频"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
             android:id="@+id/ll_file_vedio"
            android:layout_marginLeft="10dp" 
            android:text="323.50M"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_weight="1" 
            android:layout_width="0dp"
            android:layout_height="match_parent"
            />
        <ImageView
            android:id="@+id/iv_file_vedio"  
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:src="@drawable/ic_arrows_right"
            />
        <ProgressBar
            android:id="@+id/pb_file_vedio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            />
    </LinearLayout>
    
    <!--音频  -->
    <LinearLayout
        android:id="@+id/ll_file_manager_audio"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >
        <TextView 
             
            android:text="音频"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/ll_file_audio"
            android:layout_marginLeft="10dp" 
            android:text="37.94M"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_weight="1" 
            android:layout_width="0dp"
            android:layout_height="match_parent"
            />
        <ImageView
            android:id="@+id/iv_file_audio"  
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:src="@drawable/ic_arrows_right"
            />
        <ProgressBar
            android:id="@+id/pb_file_audio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            />
    </LinearLayout>
    
    <!--图像  -->
    <LinearLayout
         android:id="@+id/ll_file_manager_pic"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >
        <TextView 
            android:text="图像"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/ll_file_pic"
            android:layout_marginLeft="10dp" 
            android:text="619.88"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_weight="1" 
            android:layout_width="0dp"
            android:layout_height="match_parent"
            />
        <ImageView
            android:id="@+id/iv_file_pic"  
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:src="@drawable/ic_arrows_right"
            />
        <ProgressBar
            android:id="@+id/pb_file_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            />
    </LinearLayout>
   
    <!--压缩包  -->
    <LinearLayout
        android:id="@+id/ll_file_manager_zip"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >
        <TextView
            android:text="压缩包"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/ll_file_zip"
            android:layout_marginLeft="10dp" 
            android:text="6.68M"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_weight="1" 
            android:layout_width="0dp"
            android:layout_height="match_parent"
            />
        <ImageView
            android:id="@+id/iv_file_zip"  
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           
            android:visibility="gone"
            
            android:src="@drawable/ic_arrows_right"
            />
        <ProgressBar
            android:id="@+id/pb_file_zip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            />
    </LinearLayout>
    
    <!--程序包  -->
    <LinearLayout
       android:id="@+id/ll_file_manager_apk"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        >
        <TextView 
              
            android:text="程序包"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:id="@+id/ll_file_apk"
            android:layout_marginLeft="10dp" 
            android:text="340.86"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_weight="1" 
            android:layout_width="0dp"
            android:layout_height="match_parent"
            />
        <ImageView
            android:id="@+id/iv_file_apk"  
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:src="@drawable/ic_arrows_right"
            />
        <ProgressBar
            android:id="@+id/pb_file_apk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            />
    </LinearLayout>
</LinearLayout>
