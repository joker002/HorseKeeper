<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <!--电池  -->
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingLeft="30dp"
        android:paddingRight="20dp"
        android:gravity="center_vertical"
        >
        <ProgressBar
            android:id="@+id/pb_phone_battern"             
            android:layout_weight="1"
            android:layout_height="80dp"
            android:layout_width="0dp"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:max="100"
            android:background="@drawable/shape_phone_battern"
            android:progress="10"
            android:progressDrawable="@drawable/layer_soft_phone_barttern"
            />
        <View 
            android:layout_width="10dp"
            android:layout_height="50dp"
            android:background="#00ff00"
            />
        <TextView
            android:id="@+id/tv_phone_battern"
            android:layout_marginLeft="10dp" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10%"
            />
    </LinearLayout>
    
    <!--设备名称  -->
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="80dp"
        >
        <ImageView
            android:background="#66cd30" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/setting_info_icon_version"
            android:layout_marginLeft="10dp"
            />
        <LinearLayout 
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            >
            <TextView
                android:id="@+id/tv_phone_name"
                android:layout_marginBottom="10dp" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="设备名称:HUAWEI"
                />
            <TextView
                android:id="@+id/tv_phone_edition" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="系统版本:5.0.1"
                />
        </LinearLayout>
        </LinearLayout>
    
    <!--全部运行内存  -->
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="80dp"
        >
        <ImageView
            android:background="#db3a37" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/setting_info_icon_space"
            android:layout_marginLeft="10dp"
            />
        <LinearLayout 
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            >
            <TextView
                android:id="@+id/tv_phone_running"
                android:layout_marginBottom="10dp" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全部运行内存2.73G"
                />
            <TextView
                android:id="@+id/tv_phone_residue_running" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="剩余运行内存737.38M"
                />
        </LinearLayout>
        </LinearLayout>
    
    <!--cpu名称  -->
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="80dp"
        >
        <ImageView
            android:background="#ffbb35" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/setting_info_icon_cpu"
            android:layout_marginLeft="10dp"
            />
        <LinearLayout 
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            >
            <TextView
                android:id="@+id/tv_phone_cpu_name"
                android:layout_marginBottom="10dp" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="cpu名称:AA"
                />
            <TextView
                android:id="@+id/tv_phone_cpu_number" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="cpu数量:8"
                />
        </LinearLayout>
        </LinearLayout>
    
    <!--手机分辨率  -->
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="80dp"
        >
        <ImageView
            android:background="#66cd30" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/setting_info_icon_camera"
            android:layout_marginLeft="10dp"
            />
        <LinearLayout 
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            >
            <TextView
                android:id="@+id/tv_phone_resolution"
                android:layout_marginBottom="10dp" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机分辨率:1080*1794"
                />
            <TextView
                android:id="@+id/tv_phone_camera_resolution" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="相机分辨率:4160*3120"
                />
        </LinearLayout>
        </LinearLayout>
    
    <!--基带版本  -->
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="80dp"
        >
        <ImageView
            android:background="#db3a37" 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/setting_info_icon_root"
            android:layout_marginLeft="10dp"
            />
        <LinearLayout 
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            >
            <TextView
                android:id="@+id/tv_phone_base_band"
                android:layout_marginBottom="10dp" 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="基带版本:unknown"
                />
            <TextView 
                android:id="@+id/tv_phone_root"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="是否ROOT:否"
                />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
